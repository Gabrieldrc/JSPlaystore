  {
    "group": "user",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "users/*",
        "methods": "*",
